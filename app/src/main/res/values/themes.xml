<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieStore" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">#000011</item>


    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Set text color for query text -->
        <item name="android:textColor">@color/search_text_color</item>
        <!-- Set text color for hint text -->
    </style>
    <style name="SpinnerThemeLight">
        <item name="android:colorBackground">@color/white</item> <!-- Set background color -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Set text color -->
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
    </style>
</resources>